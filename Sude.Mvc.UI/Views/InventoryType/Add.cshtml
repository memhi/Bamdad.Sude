
@using Sude.Dto.DtoModels.Serving
@model  InventoryTypeNewDtoModel
    <hr />
<h4>افزودن واحد اندازه گیری</h4>
<hr />
<form id="frmAdd">
    <div class="row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input id="txtTitle" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="txtDesc" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="btnSaveNewInventoryType" onclick="SaveNewInventoryType()" class="btn btn-success col-md-8">ثبت</a>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-accent-2" onclick="ToList()">بازگشت</a>
    </div>
</form>
<script>



    function SaveNewInventoryType() {
        $.validator.unobtrusive.parse($('#frmAdd'));

        var isValid = $('#frmAdd').valid();
        if (!isValid)
            return;

        var InventoryType = {
            Title: $("#txtTitle").val(),
            Description: $("#txtDesc").val()
        }
        $.ajax({
            url: "/InventoryType/Add",
            type: "Post",
            data: InventoryType
        }).done(function (result) {
            if (result.isSucceed) {
                swal.fire({
                    icon: "success",
                });
                $("#InventoryTypeView").load("/InventoryType/List");
            }
            else {
     
                swal.fire({
                    title: 'هشدار',
                    text: result.message,
                    icon: 'warning',
                });
            }
        });
    }

    function ToList() {
        $("#InventoryTypeView").load("/InventoryType/List");
    }


</script>
