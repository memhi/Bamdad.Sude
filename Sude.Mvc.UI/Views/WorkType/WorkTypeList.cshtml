                                            <th></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr id="tr_@item.WorkTypeId" role="row" class="odd">
                                                <td class="sorting_1">@item.Title</td>                                           
                                                <td>@item.Desc</td>
                                                <td>
                                                    <button class="btn btn-warning btn-sm" onclick="ShowEditWorkTypePop('@item.WorkTypeId')">ویرایش</button>
                                                    <button class="btn btn-danger btn-sm" onclick="DeleteWorkType('@item.WorkTypeId')">حذف</button>
