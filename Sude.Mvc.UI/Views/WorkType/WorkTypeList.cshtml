                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

<script>
    function DeleteWorkType(worktypeId) {

        swal.fire({
            title: 'حذف نوع کسب و کار',
            text: "کاربر گرامی از حذف نوع کسب و کار مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#7cacbe',
            cancelButtonColor: '#d33',
            confirmButtonText: 'بله ، نوع کسب و کار حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {

                $.ajax({
                    url: "/WorkType/Delete/" + worktypeId,
                    type: "Get",
                    success: function (result) {
                        if (result.isSucceed == true) {
                            swal.fire(
                                'موفق!',
                                result.message,
                                'success'
                            ).then(function (isConfirm) {
                                $("#tr_" + servingId).addClass("danger");
                                $("#tr_" + servingId).hide('slow');
                                //location.reload();
                            });
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                result.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }



    function ShowEditWorkTypePop(worktypeId) {
        $.get("/WorkType/Edit/" + worktypeId, function (result) {

            $("#myModal").modal('show');
            $("#myModalLabel").html("ویرایش نوع کسب و کار");
            $("#myModalBody").html(result);
        });
    }




    function ShowEditWorkType(worktypeId) {
        $("#WorkTypeView").load("/WorkType/Edit/" + worktypeId);

    }


    function ShowNewPageModalDetailWorkType(worktypeId) {


        $.get("/WorkType/Detail/" + worktypeId, function (result) {

            $("#myModal").modal('show');
            $("#myModalLabel").html("جزئیات  نوع کسب و کار");
            $("#myModalBody").html(result);
        });
    }

</script>