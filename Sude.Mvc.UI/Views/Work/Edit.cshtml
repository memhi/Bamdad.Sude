
@model Sude.Dto.DtoModels.Work.WorkEditDtoModel

<h4>ویرایش خدمات</h4>
<hr />
<form id="frmEdit">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input id="txtWorkId" type="hidden" asp-for="WorkId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input id="txtTitle" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input id="txtDesc" asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">WorkTypes</label>
                <div class="col-md-10">

                    <select id="drpTypes" asp-for="WorkTypeId"
                            class="form-control"
                            asp-items="(SelectList)@ViewData["WorkTypes"]">
                    </select>

                    @*<select id="drpTypes" asp-items="new SelectList( ,nameof(Sude.Dto.DtoModels.Work.WorkTypeDetailDtoModel.WorkTypeId), nameof(Sude.Dto.DtoModels.Work.WorkTypeDetailDtoModel.Title));" class="form-control  l-dropdown js-example-basic-single">
                </select>*@
                </div>
            </div>
            <div class="form-group">
                <a id="btnEditWork" onclick="EditWork()" class="btn btn-warning">تغییر</a>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-accent-2" onclick="ToList()">بازگشت</a>
    </div>
</form>



    <script>

        $(function () {
           $.validator.unobtrusive.parse($('#frmEdit'));
        });

        function EditWork() {
            $.validator.unobtrusive.parse($('#frmEdit'));

            var isValid = $('#frmEdit').valid();
            if (!isValid)
                return;
            var Work = {
                WorkId: $("#txtWorkId").val(),
                Title: $("#txtTitle").val(),
                Desc: $("#txtDesc").val(),              
                WorkTypeId: $("#drpTypes").val()
            }

            $.ajax({
                url: "/Work/Edit",
                type: "Post",
                data: Work
            }).done(function (result) {
                if (result.isSucceed) {
                    swal.fire({
                        icon: "success",
                    });
                    $("#WorkView").load("/Work/List");

                }
                else {
                    swal.fire({
                        title: 'هشدار',
                        text: result.message,
                        icon: 'warning',
                    });
                }
            });
        }

        function ToList() {
            $("#WorkView").load("/Work/List");
        }


    </script>
