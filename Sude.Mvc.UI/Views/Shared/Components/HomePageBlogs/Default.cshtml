@model IEnumerable<Sude.Dto.DtoModels.Content.BlogDetailDtoModel>
@if (Model!=null && Model.Count() > 0)
{

 
    <div class="title">
        <strong>مقالات</strong>
    </div>


     


    <div class="row">

       

        @foreach (Sude.Dto.DtoModels.Content.BlogDetailDtoModel item in Model)
        {


            <div class="col-lg-4 col-md-6">
                <div class="feature-1">
                    <div>
                        <a href="#">

                            <div class="date">
                                <span>@item.StartDate.ToLocalizationDateTime("D")</span>
                            </div>
                        </a>
                        <h3 class="mb-0"><a href="Blog/@item.UrlBlog">@item.Title</a></h3>
                    </div>
                    <div class="feature-1-content">
                        @Html.Raw(item.ShortBody)
                    </div>
                </div>



                }
            </div>



        }
        <div class="view-all">
            <a href="@Url.RouteUrl("BlogsArchive")">آرشیو مقالات</a>
        </div>
    </div>
        }