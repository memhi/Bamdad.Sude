@model Sude.Dto.DtoModels.Serving.ServingNewDtoModel
    <hr />
    <h4>افزودن خدمات</h4>
    <hr />
    <form id="frmAdd">
        <div class="row">
            <div class="col-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input id="txtTitle" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input id="txtPrice" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc" class="control-label"></label>
                    <input id="txtDesc" asp-for="Desc" class="form-control" />
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>

              
                <div class="form-group">
                    <label asp-for="IsActive" class="control-label"></label>
                    <input id="cbIsActive" type="checkbox"  asp-for="IsActive" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="HasInventoryTracking" class="control-label"></label>
                    <input id="cbHasInventoryTracking" type="checkbox" asp-for="HasInventoryTracking" class="form-control" />
                </div>
          
                <div class="form-group">
                    <label class="control-label">Works</label>
                    <div class="col-md-10">

                        <select id="drpWorks" asp-for="WorkId"
                                class="form-control"
                                asp-items="(SelectList)@ViewData["Works"]">
                        </select>

                    </div>
                </div>

                <div class="form-group">
                    <a id="btnSaveNewServing" onclick="SaveNewServing()" class="btn btn-success col-md-8">ثبت</a>
                </div>
            </div>
        </div>

        <div>
            <a class="btn btn-accent-2" onclick="ToList()">بازگشت</a>
        </div>
    </form>
    <script>



    function SaveNewServing() {
        $.validator.unobtrusive.parse($('#frmAdd'));

        var isValid = $('#frmAdd').valid();
        if (!isValid)
            return;
      
        var serving = {
            Title: $("#txtTitle").val(),
            Price: $("#txtPrice").val(),
            Desc: $("#txtDesc").val(),
            IsActive: $("#cbIsActive").is(":checked"),
            HasInventoryTracking: $("#cbHasInventoryTracking").is(":checked"),
            WorkId: $("#drpWorks").val()
        }
        $.ajax({
            url: "/Serving/Add",
            type: "Post",
            data: serving
        }).done(function (result) {
            if (result.isSucceed) {
                swal.fire({
                    icon: "success",
                });
                $("#servingView").load("/Serving/List");
            }
            else {
                swal.fire({
                    title: 'هشدار',
                    text: result.message,
                    icon: 'warning',
                });
            }
        });
    }

    function ToList() {
        $("#servingView").load("/Serving/List");
    }


    </script>
