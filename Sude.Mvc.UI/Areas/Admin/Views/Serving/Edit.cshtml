@model Sude.Dto.DtoModels.Serving.ServingEditDtoModel

 
<form id="frmEdit">


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input id="txtServingId" type="hidden" asp-for="ServingId" class="form-control" />
    </div>
    <section class="content">
        <div class="box box-default">
            
            <div class="box-body">

                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="control-label">عنوان</label>
                    </div>
                    <div class="col-md-9">
                        <input id="txtTitle" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="control-label">قیمت</label>
                    </div>
                    <div class="col-md-9">
                        <input id="txtPrice" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="control-label">توضیحات</label>
                    </div>
                    <div class="col-md-9">
                        <input id="txtDesc" asp-for="Desc" class="form-control" />
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">کسب و کار</label>
                    </div>
                    <div class="col-md-9">

                        <select id="drpServingWorks" asp-for="WorkId"
                                class="form-control"
                                asp-items="(SelectList)@ViewData["Works"]">
                        </select>

                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="control-label">رهگیری موجودی</label>
                    </div>
                    <div class="col-md-9">
                        <input id="cbHasInventoryTracking" type="checkbox" asp-for="HasInventoryTracking" />

                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="control-label">فعال</label>
                    </div>
                    <div class="col-md-9">
                        <input id="cbIsActive" type="checkbox" asp-for="IsActive" />

                    </div>
                </div>





            </div>
            <div class="box-footer with-border">

                <div class="form-group" style="text-align:center">
                    <div class="col-md-2">
                        <a id="btnEditServing" onclick="EditServing()" class="btn btn-success">ثبت</a>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-default" onclick="ToList()">بازگشت</a>
                    </div>
                </div>

            </div>

        </div>
    </section>






</form>



    <script>

        $(function () {
           $.validator.unobtrusive.parse($('#frmEdit'));
        });

        function EditServing() {
            $.validator.unobtrusive.parse($('#frmEdit'));

            var isValid = $('#frmEdit').valid();
            if (!isValid)
                return;
            var serving = {
                ServingId: $("#txtServingId").val(),
                Title: $("#txtTitle").val(),
                Price: $("#txtPrice").val(),
                Desc: $("#txtDesc").val() ,
                IsActive: $("#cbIsActive").is(":checked"),
                HasInventoryTracking: $("#cbHasInventoryTracking").is(":checked"),
                WorkId: $("#drpServingWorks").val()
            }

            $.ajax({
                url: "Serving/Edit",
                type: "Post",
                data: serving
            }).done(function (result) {
                if (result.isSucceed) {
                    swal.fire({
                        icon: "success",
                    });
                    $("#myModal").modal("hide");
                    $("#servingView").load("Serving/List");
                    //$("#tr_" + serving.ServingId).addClass("danger");
                    //$("#tr_" + servingId).hide('slow');
                }
                else {
                    swal.fire({
                        title: 'هشدار',
                        text: result.message,
                        icon: 'warning',
                    });
                }
            });
        }

        function ToList() {
            $("#myModal").modal("hide");
        }


    </script>
