

@model Sude.Dto.DtoModels.Account.CustomerNewDtoModel
    <hr />
    <h4>افزودن خدمت گیرنده</h4>
    <hr />
    <form id="frmAddNewCustomer">
        <div class="row">
            <div class="col-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
          
                        <label asp-for="Title" class="control-label"></label>
                        <div class="col-md-10">
                            <input id="txtTitle" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">شناسه ملی</label>
                        <div class="col-md-10">
                            <input id="txtNationalCode" asp-for="NationalCode" class="form-control" />
                            <span asp-validation-for="NationalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">تلفن</label>
                        <div class="col-md-10">
                            <input id="txtPhone" asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">

                        <a id="btnSaveNewCustomer" onclick="SaveNewOrderCustomer()" class="btn btn-success col-md-8">ثبت</a>
                    </div>
                </div>
        </div>

        <div>

            <a class="btn btn-accent-2" onclick="Back()">بازگشت</a>
        </div>
    </form>
    <script>



        function SaveNewOrderCustomer() {
     
            $.validator.unobtrusive.parse($('#frmAddNewCustomer'));
      
            var isValid = $('#frmAddNewCustomer').valid();
            if (!isValid)
                return;
       
            var customer = {
                Title: $("#txtTitle").val(),
                NationalCode: $("#txtNationalCode").val(),
                Phone: $("#txtPhone").val(),
                WorkId:''
            }
          
            $.ajax({
                url: "Customer/AddOrderCustomer",
                type: "Post",
                data: customer
            }).done(function (result) {
                if (result.isSucceed) {
                    swal.fire({
                        icon: "success",
                    });
                    //  $("#WorkView").load("Customer/List");
               
                    $('#selectedItem').val(result.data.customerId); 
                    $("#myModal").modal("hide");
                }
                else {
                    swal.fire({
                        title: 'هشدار',
                        text: result.message,
                        icon: 'warning',
                    });
                }
            });
        }
        function Back() {
            $("#myModal").modal("hide");
        }


      

    </script>
