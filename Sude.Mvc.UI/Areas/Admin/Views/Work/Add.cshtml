

@model Sude.Dto.DtoModels.Work.WorkNewDtoModel
 
    <form id="frmAdd">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <section class="content">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">ایجاد کسب و کار</h3>


                </div>
                <div class="box-body">

                    <div class="form-group row">
                        <div class="col-md-2">
                            <label class="control-label">عنوان</label>
                        </div>
                        <div class="col-md-10">
                            <input id="txtTitle" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-2">
                            <label class="control-label">توضیحات</label>
                        </div>
                        <div class="col-md-10">
                            <input id="txtDesc" asp-for="Desc" class="form-control" />
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-2">
                            <label class="control-label">نوع</label>
                            </div>
                            <div class="col-md-10">

                                <select id="drpTypes" asp-for="WorkTypeId"
                                        class="form-control"
                                        asp-items="(SelectList)@ViewData["WorkTypes"]">
                                </select>

                            </div>
                        </div>


                    </div>
                <div class="box-footer with-border">

                    <div class="form-group" style="text-align:center">
                        <div class="col-md-2">
                            <a id="btnSaveNewInventoryType" onclick="SaveNewWork()" class="btn btn-success">ثبت</a>
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-default" onclick="ToList()">بازگشت</a>
                        </div>
                    </div>

                </div>

            </div>
        </section>





      

         
    </form>
    <script>



        function SaveNewWork() {
            $.validator.unobtrusive.parse($('#frmAdd'));

            var isValid = $('#frmAdd').valid();
            if (!isValid)
                return;

            var work = {
                Title: $("#txtTitle").val(),
                Desc: $("#txtDesc").val(),
                WorkTypeId: $("#drpTypes").val()
            }
            $.ajax({
                url: "Work/Add",
                type: "Post",
                data: work
            }).done(function (result) {
                if (result.isSucceed) {
                    swal.fire({
                        icon: "success",
                    });
                    $("#WorkView").load("Work/List");
                }
                else {
                    swal.fire({
                        title: 'هشدار',
                        text: result.message,
                        icon: 'warning',
                    });
                }
            });
        }

        function ToList() {
            $("#WorkView").load("Work/List");
        }


    </script>
