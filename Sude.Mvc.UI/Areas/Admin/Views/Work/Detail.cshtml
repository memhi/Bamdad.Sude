
@model  Sude.Dto.DtoModels.Work.WorkDetailDtoModel

  @{
                                        Layout=null;
                                        }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <script src="~/AdminLTE/js/view-image.min.js"></script>
</head>
<body>

<div>

    <dl class="row">

        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.Title")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.WorkType")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkTypeName)
        </dd>


        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.Description")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>

        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.Address")
        </dt>
        @if (Model.Address != null)
        {
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Address)
        </dd>

        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.Phone")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Phone1)
        </dd>
        }
        @if (Model.Attachments != null && Model.Attachments.Any())
        {
        <dt class="col-sm-2">
            @_SudeSessionContext.GetLocalResourceValue("Page.Content.Logo")
        </dt>
        <dd class="col-sm-10">
            <div class="col-md-12">
                @foreach (Sude.Dto.DtoModels.Content.AttachmentNewDtoModel attachment in Model.Attachments)
                {
                    <div class="col-md-4 margin-bottom">
                        <div class="image-area">
                            <img src="../@attachment.AttachmentFileAddress" style="max-width:100%;max-height:150px" />

                        </div>

                    </div>

                }

            </div>
            
        </dd>
        }
    </dl>
</div>
<div>
</div>
    <script>
          jQuery.viewImage({
       
            'target': '.image-area img'

        });

    </script>
</body>
</html>
