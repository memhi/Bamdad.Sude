@using Sude.Dto.DtoModels.Result
@using Sude.Dto.DtoModels.Content
@model ResultSetDto<IEnumerable<NewsDetailDtoModel>>
    <div class="input-group">
        <input type="text" name="message" placeholder="Type words ..." class="form-control">
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-flat">جستجو</button>
        </span>
    </div>


    <div class="row">
        <div class="col-m-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">فهرست  اخبار</h3>

                    <div class="box-tools">



                        <a id="btnAdd" class="btn btn-block btn-success">خبر جدید</a>

                    </div>
                </div>
      
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <td>#</td>
                        <th>عنوان</th>
                        <th>توضیحات</th>
                        <th>منتشر شده</th>

                        <th>تاریخ ثبت</th>

                    </tr>
                    @{
                    int i=1; 
                    @foreach (var item in Model.Data)
                    {
                <tr id="tr_@item.NewsId" role="row" class="odd">
                    <td>@(i++)</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.IsPublish</td>
                    <td>@item.RegDate.ToLocalizationDateTime("D1")</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="ShowEditNewsPop('@item.NewsId')">ویرایش</button>
                        <button class="btn btn-danger btn-sm" onclick="DeleteNews('@item.NewsId')">حذف</button>
                        <button class="btn btn-info btn-sm" onclick="ShowNewPageModalDetailNews('@item.NewsId')">جزئیات</button>
                    </td>
                </tr>
                    }
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
        </div>


 
    <script>
        $("#btnAdd").click(function () {
            $("#newsView").load("News/Add");
        });


    function DeleteNews(NewsId) {

        swal.fire({
            title: 'حذف خبر',
            text: "کاربر گرامی از حذف خبر مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#7cacbe',
            cancelButtonColor: '#d33',
            confirmButtonText: 'بله ، خبر حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {

                $.ajax({
                    url: "News/Delete/" + NewsId,
                    type: "Get",
                    success: function (result) {
                        if (result.isSucceed == true) {
                            swal.fire(
                                'موفق!',
                                result.message,
                                'success'
                            ).then(function (isConfirm) {
                                $("#tr_" + NewsId).addClass("danger");
                                $("#tr_" + NewsId).hide('slow');
                          
                            });
                            $("#newsView").load("News/List");
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                result.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }



    function ShowEditNewsPop(NewsId) {
        $.get("News/Edit/" + NewsId, function (result) {

            $("#myModal").modal('show');
            $("#myModalLabel").html("ویرایش خبر");
            $("#myModalBody").html(result);
        });
    }




    function ShowEditNews(workId) {
        $("#newsView").load("News/Edit/" + NewsId);

    }

 
        function ShowNewPageModalDetailNews(NewsId){

        $.get("News/Detail/" +NewsId, function (result) {
            $("#myModal").modal('show');
            $("#myModalLabel").html("جزئیات خبر");
            $("#myModalBody").html(result);
        });
    }

    </script>