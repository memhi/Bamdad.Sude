
@using Sude.Dto.DtoModels.Serving
@model  InventoryTypeEditDtoModel

<form id="frmEdit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input id="txtInventoryTypeId" type="hidden" asp-for="InventoryTypeId" class="form-control" />
    </div>
    <section class="content">
        <div class="box box-default">
           
            <div class="box-body">

                <div class="form-group row">
                    <div class="col-md-2">
                        <label class="control-label">عنوان</label>
                    </div>
                    <div class="col-md-10">
                        <input id="txtTitle" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <label class="control-label">توضیحات</label>
                    </div>
                    <div class="col-md-10">
                        <input id="txtDesc" asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="box-footer with-border">

                <div class="form-group" style="text-align:center">
                    <div class="col-md-2">
                        <a id="btnEditInventoryType" onclick="EditInventoryType()" class="btn btn-success">ثبت</a>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-default" onclick="ToList()">بازگشت</a>
                    </div>
                </div>

            </div>

        </div>
    </section>


    
</form>



    <script>

        $(function () {
           $.validator.unobtrusive.parse($('#frmEdit'));
        });

        function EditInventoryType() {
            $.validator.unobtrusive.parse($('#frmEdit'));

            var isValid = $('#frmEdit').valid();
            if (!isValid)
                return;
            var InventoryType = {
                InventoryTypeId: $("#txtInventoryTypeId").val(),
                Title: $("#txtTitle").val(),
                Description: $("#txtDesc").val()
            }

            $.ajax({
                url: "InventoryType/Edit",
                type: "Post",
                data: InventoryType
            }).done(function (result) {
                if (result.isSucceed) {
                    swal.fire({
                        icon: "success",
                    });
                    $("#myModal").modal("hide");
                    $("#InventoryTypeView").load("InventoryType/List");
               
                }
                else {
                    swal.fire({
                        title: 'هشدار',
                        text: result.message,
                        icon: 'warning',
                    });
                }
            });
        }

        function ToList() {
              $("#myModal").modal("hide");
        }


    </script>
