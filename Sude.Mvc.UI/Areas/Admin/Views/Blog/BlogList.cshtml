@using Sude.Dto.DtoModels.Result
@using Sude.Dto.DtoModels.Content
@model ResultSetDto<IEnumerable<BlogDetailDtoModel>>
<div class="input-group">
    <input type="text" name="message" placeholder="Type words ..." class="form-control">
    <span class="input-group-btn">
        <button type="submit" class="btn btn-primary btn-flat">جستجو</button>
    </span>
</div>


<div class="row">
    <div class="col-m-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">فهرست  مقالات</h3>

                <div class="box-tools">



                    <a id="btnAdd" class="btn btn-block btn-success">مقاله جدید</a>

                </div>
            </div>

        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>
                    <td>#</td>
                    <th>عنوان</th>
                    <th>توضیحات</th>
                    <th>منتشر شده</th>
                    <th>تاریخ ثبت</th>



                </tr>
                @{ 
                    int i = 1;
                    @foreach (var item in Model.Data)
                {
            <tr id="tr_@item.BlogId" role="row" class="odd">
                <td>@(i++)</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IsPublish</td>
                <td>@item.RegDate.ToLocalizationDateTime("D1")</td>

                <td>
                    <button class="btn btn-warning btn-sm" onclick="ShowEditBlogPop('@item.BlogId')">ویرایش</button>
                    <button class="btn btn-danger btn-sm" onclick="DeleteBlog('@item.BlogId')">حذف</button>
                    <button class="btn btn-info btn-sm" onclick="ShowNewPageModalDetailBlog('@item.BlogId')">جزئیات</button>
                </td>
            </tr>
                }}

            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

    </div>



<script>
        $("#btnAdd").click(function () {
            $("#blogView").load("Blog/Add");
        });


    function DeleteBlog(blogId) {

        swal.fire({
            title: 'حذف مقاله',
            text: "کاربر گرامی از حذف مقاله مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#7cacbe',
            cancelButtonColor: '#d33',
            confirmButtonText: 'بله ، مقاله حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {

                $.ajax({
                    url: "Blog/Delete/" + blogId,
                    type: "Get",
                    success: function (result) {
                        if (result.isSucceed == true) {
                            swal.fire(
                                'موفق!',
                                result.message,
                                'success'
                            ).then(function (isConfirm) {
                                $("#tr_" + blogId).addClass("danger");
                                $("#tr_" + blogId).hide('slow');
                         
                            });
                            $("#blogView").load("Blog/List");
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                result.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }



    function ShowEditBlogPop(blogId) {
        $.get("Blog/Edit/" + blogId, function (result) {

            $("#myModal").modal('show');
            $("#myModalLabel").html("ویرایش مقاله");
            $("#myModalBody").html(result);
        });
    }




    function ShowEditBlog(workId) {
        $("#blogView").load("/Blog/Edit/" + blogId);

    }


        function ShowNewPageModalDetailBlog(blogId){

        $.get("Blog/Detail/" +blogId, function (result) {
            $("#myModal").modal('show');
            $("#myModalLabel").html("جزئیات مقاله");
            $("#myModalBody").html(result);
        });
    }

</script>