
@model Sude.Dto.DtoModels.Work.WorkTypeNewDtoModel
 
<form id="frmAdd">
   


      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <section class="content">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">ایجاد نوع کسب و کار</h3>


                    </div>
                    <div class="box-body">
                     
                            <div class="form-group row">
                                <div class="col-md-1">
                                    <label class="control-label">عنوان</label>
                                </div>
                                <div class="col-md-11">
                                    <input id="txtTitle" asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-1">
                                    <label class="control-label">توضیحات</label>
                                </div>
                                <div class="col-md-11">
                                    <input id="txtDesc" asp-for="Desc" class="form-control" />
                                    <span asp-validation-for="Desc" class="text-danger"></span>
                                </div>
                            </div>
                          
                     
                    </div>
                    <div class="box-footer with-border">

                        <div class="form-group" style="text-align:center">
                            <div class="col-md-2">
                                <a id="btnSaveNewInventoryType" onclick="SaveNewWorkType()" class="btn btn-success">ثبت</a>
                            </div>
                            <div class="col-md-2">
                                <a class="btn btn-default" onclick="ToList()">بازگشت</a>
                            </div>
                        </div>

                    </div>

                </div>
                </section>




</form>
<script>
    function SaveNewWorkType() {
        $.validator.unobtrusive.parse($('#frmAdd'));
        var isValid = $('#frmAdd').valid();
        if (!isValid)
            return;
        var worktype = {
            Title: $("#txtTitle").val(),
            Desc: $("#txtDesc").val()
        }
        $.ajax({
            url: "WorkType/Add",
            type: "Post",
            data: worktype
        }).done(function (result) {
            if (result.isSucceed) {
                Command: toastr["success"]("اطلاعات نوع کسب و کار اضافه شد");
                $("#WorkTypeView").load("WorkType/List");
            }
            else {
                Command: toastr["warning"](result.message, "هشدار");
            }
        });
    }
    function ToList() {
        $("#WorkTypeView").load("WorkType/List");
    }
</script>