@using Sude.Dto.DtoModels.Result
@using Sude.Dto.DtoModels.Work
@model ResultSetDto<IEnumerable<WorkTypeDetailDtoModel>>

<div class="input-group">
    <input type="text" name="message" placeholder="Type words ..." class="form-control">
    <span class="input-group-btn">
        <button type="submit" class="btn btn-primary btn-flat">جستجو</button>
    </span>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">فهرست  انواع کسب و کار</h3>

                <div class="box-tools">
                  
                            <a id="btnAdd" class="btn btn-block btn-success">نوع کسب و کار جدید</a>
                  
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>

                        <th>توضیحات</th>
                        <th>عملیات</th>

                    </tr>
                    @{ 
                        int i = 1;
                        @foreach (var item in Model.Data)
                    {
                <tr id="tr_@item.WorkTypeId" role="row" class="odd">
                    <td>@(i++)</td>
                    <td>@item.Title</td>
                    <td>@item.Desc</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="ShowEditWorkTypePop('@item.WorkTypeId')">ویرایش</button>
                        <button class="btn btn-danger btn-sm" onclick="DeleteWorkType('@item.WorkTypeId')">حذف</button>
                        <button class="btn btn-info btn-sm" onclick="ShowNewPageModalDetailWorkType('@item.WorkTypeId')">جزئیات</button>
                    </td>
                </tr>
                    }
                        }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>


</div>

 

<script>
    $("#btnAdd").click(function () {
        $("#WorkTypeView").load("WorkType/Add");
    });
    function DeleteWorkType(worktypeId) {
        swal.fire({
            title: 'حذف نوع کسب و کار',
            text: "کاربر گرامی از حذف نوع کسب و کار مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#7cacbe',
            cancelButtonColor: '#d33',
            confirmButtonText: 'بله ، نوع کسب و کار حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "WorkType/Delete/" + worktypeId,
                    type: "Get",
                    success: function (result) {
                        if (result.isSucceed == true) {
                            swal.fire(
                                'موفق!',
                                result.message,
                                'success'
                            ).then(function (isConfirm) {
                                $("#tr_" + worktypeId).addClass("danger");
                                $("#tr_" + worktypeId).hide('slow');
                           
                            });
                            $("#workTypeView").load("WorkType/List");
                        }
                        else {
                            swal.fire(
                                'هشدار!',
                                result.message,
                                'warning'
                            );
                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }
                });
            }
        })
    }
    function ShowEditWorkTypePop(worktypeId) {
        $.get("WorkType/Edit/" + worktypeId, function (result) {
            $("#myModal").modal('show');
            $("#myModalLabel").html("ویرایش نوع کسب و کار");
            $("#myModalBody").html(result);
        });
    }
    function ShowEditWorkType(worktypeId) {
        $("#WorkTypeView").load("WorkType/Edit/" + worktypeId);
    }
    function ShowNewPageModalDetailWorkType(worktypeId) {
        $.get("WorkType/Detail/" + worktypeId, function (result) {
            $("#myModal").modal('show');
            $("#myModalLabel").html("جزئیات  نوع کسب و کار");
            $("#myModalBody").html(result);
        });
    }
</script>